{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "strictNullChecks": false,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./.build"
  },
  "include": ["app/**/*.ts"],
  "exclude": ["node_modules"]
}
